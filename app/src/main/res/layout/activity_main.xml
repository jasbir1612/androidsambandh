<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context="test.testing.ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logo_layout"
        android:background="@android:color/white"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:id="@+id/logo"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pledgelife_logo"
        android:id="@+id/pledge_logo2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find UDICE code"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtlogin"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_margin="20dp"
            android:id="@+id/line"
            />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/district_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter District Code"
        android:background="@drawable/etshape"
        android:padding="10dp"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/block_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/etshape"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:hint="Enter Block Code"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/village_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Village Code"
        android:background="@drawable/etshape"
        android:padding="10dp"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:text="UDICE Code is: "
                android:layout_gravity="center_vertical"

                />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/udice_code"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="UDice Code"
            tools:layout_editor_absoluteX="8dp"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_margin="8dp"
            tools:layout_editor_absoluteY="0dp" />
        </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#002468"
        android:text="Submit"
        android:layout_margin="10dp"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
