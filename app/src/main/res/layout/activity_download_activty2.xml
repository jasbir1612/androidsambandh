<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".ui.DownloadActivty2">


    <ImageView
        android:id="@+id/pledge_logo2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/pledgelife_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pledge_logo2"
        android:layout_marginTop="-24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Download"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <View
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txtDownload"
                android:layout_margin="20dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/selectStateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/etshape"
                android:hint="Select State"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxWidth="300dp"
                android:maxLength="10"
                android:padding="10dp" />


            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectStateEt"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/etshape"
                android:hint="Enter Mobile Number"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:maxWidth="300dp"
                android:maxLength="10"
                android:padding="10dp" />


            <Button
                android:id="@+id/proceed_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/et_number"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/login_btn_color"
                android:text="Proceed"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_below="@id/proceed_btn">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proceed_btn"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="*Downloaded files will be saved in the Downloads folder"/>

            <Button
                android:id="@+id/btdownload2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:text="download PFL Video English"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btdownload_hindi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                android:text="download PFL Video Hindi"
                android:textColor="@android:color/white" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pdf2"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"
                android:text="Download Instructions"
                android:background="@android:color/darker_gray"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewpdf2_2"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"
                android:text="View Instructions"
                android:background="@android:color/darker_gray"/>

                <Button
                    android:id="@+id/vengvideo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"
                    android:text="View PFL Video English(Youtube)"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/vhindivideo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"
                    android:text="View PFL Video Hindi(Youtube)"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/help_line"/>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>